<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/reservation_list_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/reservation_list_card_height"
            android:padding="4dp">

            <ImageView
                android:id="@+id/reservation_list_card_profile_picture_image_view"
                android:layout_width="@dimen/reservation_list_card_profile_picture_width"
                android:layout_height="@dimen/reservation_list_card_profile_picture_height"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_picture_placeholder"
                android:alpha="0.74"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/reservation_list_card_profile_full_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/reservation_list_card_profile_picture_image_view"
                />

            <TextView
                android:id="@+id/reservation_list_card_profile_phone_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/reservation_list_card_profile_full_name_text_view"
                app:layout_constraintStart_toEndOf="@+id/reservation_list_card_profile_picture_image_view"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>